<h1>New Post</h1>

<form action="/posts" method="post">
  <%# add form fields %>
  <p>
    <input type="text" placeholder="Name" name="author" id="author">
  </p>
  <p>
    <input type="text" placeholder="Describe your photo!" name="body" id="body">
  </p>
  <p>
    <input type="text" placeholder="Paste Image url" name="image" id="image">
  </p>
  
  <button>Submit</button>
</form>